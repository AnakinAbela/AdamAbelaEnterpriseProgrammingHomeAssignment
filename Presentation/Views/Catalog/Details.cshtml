@model Domain.Models.Restaurant
@{
    ViewData["Title"] = Model.Name;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1>@Model.Name</h1>
        <p class="text-muted mb-0">Owner: @Model.OwnerEmailAddress</p>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">Back to catalog</a>
</div>

@if (Model.MenuItems == null || !Model.MenuItems.Any(mi => mi.Status))
{
    <div class="alert alert-info">No approved menu items yet.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var item in Model.MenuItems.Where(mi => mi.Status))
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" style="object-fit: cover; height: 180px;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text fw-semibold">$@item.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
